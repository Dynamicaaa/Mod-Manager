{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "importHelpers": true,
    "sourceMap": true,
    "outDir": "lib",
    "rootDir": ".",
    "removeComments": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/renderer/js/components/**/*.js"
  ]
}
